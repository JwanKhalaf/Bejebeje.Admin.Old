@model ViewModels.Artist.ArtistIndexViewModel
@using Common

@{
  ViewData["Title"] = "List of artists";
}

<div class="heading mb-5">
  <h1>Artists</h1>

  <div>
    @Html.ActionLink("Add new artist", "Create", "Artist", null, new { @class = "btn btn-sm btn-primary" })
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Is approved?</th>
      <th scope="col">Is deleted?</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    @foreach (var item in Model.Artists)
    {
      <tr>
        <td>@item.Id</td>
        <td>@item.FirstName</td>
        <td>@item.LastName</td>
        <td>@item.IsApproved.ToYesOrNo()</td>
        <td>@item.IsDeleted.ToYesOrNo()</td>
        <td style="text-align: right">
          @Html.ActionLink("View", "Details", new { id = item.Id }) |
          @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
          @Html.ActionLink("Lyrics", "Index", "Lyric", new { artistId = item.Id })
        </td>
      </tr>
    }
  </tbody>
</table>